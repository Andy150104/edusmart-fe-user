{
  "openapi": "3.0.4",
  "info": {
    "title": "Auth Service",
    "version": "v1"
  },
  "servers": [
    {
      "url": "/auth"
    }
  ],
  "paths": {
    "/connect/token": {
      "post": {
        "tags": ["Auth"],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/connect/logout": {
      "post": {
        "tags": ["Auth"],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/session": {
      "get": {
        "tags": ["Auth"],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/UserSessionResponse"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UserSessionResponse"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/UserSessionResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/InsertStudent": {
      "post": {
        "tags": ["InsertStudent"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/StudentInsertCommand"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/StudentInsertCommand"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/StudentInsertCommand"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/StudentInsertResponse"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/StudentInsertResponse"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/StudentInsertResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/VerifyAccount": {
      "post": {
        "tags": ["VerifyAccount"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AccountVerifyCommand"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/AccountVerifyCommand"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/AccountVerifyCommand"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/AccountVerifyResponse"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AccountVerifyResponse"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/AccountVerifyResponse"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "AccountVerifyCommand": {
        "required": ["key"],
        "type": "object",
        "properties": {
          "key": {
            "minLength": 1,
            "type": "string"
          }
        },
        "additionalProperties": false
      },
      "AccountVerifyResponse": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean"
          },
          "messageId": {
            "type": "string",
            "nullable": true
          },
          "message": {
            "type": "string",
            "nullable": true
          },
          "detailErrors": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/DetailError"
            },
            "nullable": true
          },
          "response": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "DetailError": {
        "type": "object",
        "properties": {
          "field": {
            "type": "string",
            "nullable": true
          },
          "messageId": {
            "type": "string",
            "nullable": true
          },
          "errorMessage": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "StudentInsertCommand": {
        "required": ["email", "firstName", "lastName", "password"],
        "type": "object",
        "properties": {
          "email": {
            "maxLength": 255,
            "minLength": 0,
            "type": "string",
            "format": "email",
            "default": "edusmartAI@gmail.com"
          },
          "password": {
            "maxLength": 100,
            "minLength": 6,
            "pattern": "^(?=.*[a-z])(?=.*[A-Z])(?=.*\\d)(?=.*[@$!%*?&])[A-Za-z\\d@$!%*?&]+$",
            "type": "string",
            "default": "Edusmart@123"
          },
          "firstName": {
            "maxLength": 50,
            "minLength": 2,
            "pattern": "^[\\p{L}\\s]+$",
            "type": "string",
            "default": "Edu"
          },
          "lastName": {
            "maxLength": 50,
            "minLength": 2,
            "pattern": "^[\\p{L}\\s]+$",
            "type": "string",
            "default": "Sm√°rt"
          }
        },
        "additionalProperties": false
      },
      "StudentInsertResponse": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean"
          },
          "messageId": {
            "type": "string",
            "nullable": true
          },
          "message": {
            "type": "string",
            "nullable": true
          },
          "detailErrors": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/DetailError"
            },
            "nullable": true
          },
          "response": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "UserSessionResponse": {
        "type": "object",
        "properties": {
          "userId": {
            "type": "string",
            "format": "uuid"
          },
          "name": {
            "type": "string",
            "nullable": true
          },
          "email": {
            "type": "string",
            "nullable": true
          },
          "role": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      }
    },
    "securitySchemes": {
      "JWT_Token": {
        "type": "apiKey",
        "description": "Copy this into the value field: Bearer {token}",
        "name": "Authorization",
        "in": "header"
      }
    }
  },
  "security": [
    {
      "JWT_Token": []
    }
  ]
}
